datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Phrase {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    streak      Int      @default(0)
    practisedAt DateTime @default(now())
    phrase      String
    translation String
}

model User {
    id           String  @id @default(auto()) @map("_id") @db.ObjectId
    email        String
    username     String
    firstName    String
    lastName     String
    receivePromo Boolean @default(false)
    passwordHash String
    tokenVersion Int
}
